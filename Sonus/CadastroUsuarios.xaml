<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sonus.CadastroUsuarios"
             Title="CadastroUsuarios">
    
    <VerticalStackLayout BackgroundColor="Purple" Padding="30" Spacing="30">

        <Label Text="Digite o email do Usuario:" TextColor="White"/>
        <Border BackgroundColor="White">
            <Entry x:Name="EntryEmail"/>
        </Border>
        
        <Label Text="Digite o nickname do Usuario:" TextColor="White"/>
        <Border BackgroundColor="White">
            <Entry x:Name="EntryNickname"/>
        </Border>

        <Label Text="Digite a senha do Usuario:" TextColor="White"/>
        <Border BackgroundColor="White">
            <Entry x:Name="EntrySenha"/>
        </Border>

        <Button Text="Cadastrar" Clicked="Salvar_Clicked" />

    </VerticalStackLayout>
</ContentPage>