<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="Sonus.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:Sonus"
    Title="Sonus"
    BackgroundColor="Purple">

    <FlyoutItem Title="Artistas">
        
        <ShellContent
            Title="Listagem Artistas"
            ContentTemplate="{DataTemplate local:ListagemArtistas}"
            Route="ListagemArtistas" 
            />

        <ShellContent
            Title="Cadastro Artistas"
            ContentTemplate="{DataTemplate local:CadastroArtistas}"
            Route="CadastroArtistas"/>

    </FlyoutItem>

    <FlyoutItem Title="Músicas">

        <ShellContent
        Title="Listagem Músicas"
        ContentTemplate="{DataTemplate local:ListagemMusica}"
        Route="ListagemMusica"/>

        <ShellContent
        Title="Cadastro Músicas"
        ContentTemplate="{DataTemplate local:CadastroMusica}"
        Route="CadastroMusica"/>

    </FlyoutItem>

    <FlyoutItem Title="Usuarios">

        <ShellContent
    Title="Listagem Usuarios"
    ContentTemplate="{DataTemplate local:ListagemUsuarios}"
    Route="ListagemUsuarios"/>

        <ShellContent
    Title="Cadastro Usuarios"
    ContentTemplate="{DataTemplate local:CadastroUsuarios}"
    Route="CadastroUsuarios"/>



    </FlyoutItem>

</Shell>
