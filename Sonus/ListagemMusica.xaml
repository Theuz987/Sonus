<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sonus.ListagemMusica"
             Title="ListagemMusica">

    <ScrollView>
        
        <VerticalStackLayout>

            <ListView x:Name="Lista">
                <ListView.ItemTemplate>
                    <DataTemplate>

                        <TextCell Text="{Binding nome}" Detail="{Binding tempo}" />

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
        
    </ScrollView>
</ContentPage>