<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Sonus.CadastroArtistas"
             Title="CadastroArtistas">
    
    <VerticalStackLayout BackgroundColor="Purple" Padding="30" Spacing="30">

        <Label Text="Digite o nome do artista: " TextColor="White"/>
            <Border BackgroundColor="White" BindingContext="White">
                <Entry x:Name="EntryNome"/>
            </Border>

        <Label Text="Insira a url da imagem: " TextColor="White"/>
            <Border BackgroundColor="White">
                <Entry x:Name="EntryUrl"/>
            </Border>

        <Button Text="Salvar" Clicked="Salvar_Clicked"  BackgroundColor="DarkOrchid" BorderColor="Black" BorderWidth="2" Padding="20" WidthRequest="200"/>
        
    </VerticalStackLayout>
    
</ContentPage>